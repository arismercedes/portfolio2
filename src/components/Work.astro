        </div>
    </div>

</section>  


<style>
    .thumbnail-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        grid-auto-rows: 1fr;
        grid-gap: 20px;        
    }

    @media screen and (min-width: 1024px) {
        .thumbnail-container {
            display: flex;
            flex-flow: column wrap;
            width: 600px;
            height: 620px;
            align-content: center;
        }
    }
</style>


<script>
    const imgs = document.querySelectorAll(".hover_tgt")
    let number = 1
    
    function enumImg() {
        for (let x of imgs) {
            x.dataset.index = String(number);
            number ++;
        }
    }
    enumImg()



</script>
